<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_article_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/widget_size_2"
        android:divider="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_article_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="visible"
            android:padding="@dimen/widget_size_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/widget_size_16"
                app:layout_constraintBottom_toTopOf="@+id/title_article"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <ImageView
                    android:id="@+id/article_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:minHeight="150dp"
                    android:scaleType="fitXY" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_video_player"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtube_player_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        app:autoPlay="false"
                        app:enableAutomaticInitialization="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/btnPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/widget_size_8"
                        android:layout_marginTop="@dimen/widget_size_8"
                        android:layout_marginEnd="@dimen/widget_size_8"
                        android:layout_marginBottom="@dimen/widget_size_8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_play_button" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_banner_share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_gravity="bottom"
                    android:layout_margin="@dimen/widget_size_2"
                    android:minHeight="@dimen/app_bar_height"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_banner_logo"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_gravity="end|top"
                    android:layout_margin="@dimen/widget_size_2"
                    android:background="@mipmap/ic_launcher_round"
                    android:minHeight="@dimen/app_bar_height"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title_article"
                style="@style/stlTxtHeadingAccent"
                tools:text="Coronavirus India LIVE Updates: 30,548 Fresh COVID-19 Cases In India, Lowest Daily Cases In 4 Months"
                app:layout_constraintBottom_toTopOf="@+id/desc_article"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_container" />

            <TextView
                android:id="@+id/desc_article"
                style="@style/stlTxtDesc"
                tools:text="Coronavirus India LIVE Updates: 30,548 Fresh COVID-19 Cases In India, Lowest Daily Cases In 4 Months"
                app:layout_constraintBottom_toTopOf="@+id/read_more_article"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_article" />

            <com.google.android.material.chip.Chip
                android:id="@+id/read_more_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:clickable="false"
                android:background="@color/colorAccent"
                android:elevation="0dp"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/colorAccent"
                app:chipCornerRadius="@dimen/widget_size_8"
                android:text="Read More"
                app:layout_constraintBottom_toTopOf="@+id/ll_polling"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/desc_article" />

<!--            <TextView-->
<!--                android:id="@+id/read_more_article"-->
<!--                android:layout_width="wrap_content"-->
<!--                style="@style/stlTxtHeading"-->
<!--                android:background="@color/colorAccent"-->
<!--                android:padding="@dimen/widget_size_4"-->
<!--                android:text="Read More"-->
<!--                app:layout_constraintLeft_toLeftOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/desc_article" />-->

            <LinearLayout
                android:id="@+id/ll_poll_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/read_more_article"
                >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/widget_size_1"
                    android:orientation="horizontal"
                    tools:ignore="UselessLeaf">
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_poll_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/poll_question"
                        android:textSize="@dimen/font_size_14"
                        android:visibility="visible" />
                    <RadioButton
                        android:id="@+id/rb_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Yes"/>
                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="No"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_polling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/read_more_article"
                tools:visibility="visible">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_pole_title"
                    style="@style/stlTxtHeadingAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="poll"
                    android:layout_marginHorizontal="@dimen/widget_size_1"
                    android:visibility="visible" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipVote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/widget_size_2"
                    android:text="@string/submit"
                    android:visibility="gone" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:layout_marginHorizontal="@dimen/widget_size_2"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                    tools:listitem="@layout/item_option"
                    tools:itemCount="2"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_no_votes_pole"
                    style="@style/stlTxtSubHeading"
                    android:layout_marginHorizontal="@dimen/widget_size_2"
                    android:textAlignment="textEnd"
                    tools:text="@string/app_name"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/published_at"
                style="@style/stlTxtSubHeading"
                tools:text="@string/app_name"
                android:layout_marginHorizontal="@dimen/widget_size_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_polling" />

            <View
                android:id="@+id/view"
                style="@style/line"
                android:layout_width="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/published_at" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/widget_size_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view">

                <com.tekskills.sampleapp.utils.like.LikeButton
                    android:id="@+id/heart_button"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    app:anim_scale_factor="3"
                    app:icon_size="@dimen/default_icon_size"
                    app:icon_type="heart" />

                <ImageView
                    android:id="@+id/like"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_toEndOf="@id/heart_button"
                    android:background="@drawable/ic_like"
                    android:backgroundTint="@color/yellow"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/widget_size_4"
                    android:layout_toEndOf="@id/like"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#C3CBCE"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_marginStart="@dimen/widget_size_8"
                    android:layout_toEndOf="@id/likes"
                    android:background="@drawable/icons_comment" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/widget_size_4"
                    android:layout_toEndOf="@id/comment"
                    android:text="0"
                    android:textColor="#C3CBCE"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/save"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_marginEnd="@dimen/widget_size_4"
                    android:layout_toStartOf="@id/iv_share"
                    android:background="@drawable/ic_save"
                    android:visibility="gone"
                    android:backgroundTint="@color/black" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="@dimen/default_icon_size"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_marginEnd="@dimen/widget_size_4"
                    android:layout_toStartOf="@id/shares"
                    android:background="@drawable/ic_round_share"
                    android:backgroundTint="@color/colorAccent" />

                <TextView
                    android:id="@+id/shares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/widget_size_4"
                    android:text="0"
                    android:textColor="#C3CBCE"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_article_ad_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_banner_ads"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/widget_size_2"
                android:minHeight="@dimen/app_bar_height"
                android:visibility="visible"
                android:background="@drawable/no_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>