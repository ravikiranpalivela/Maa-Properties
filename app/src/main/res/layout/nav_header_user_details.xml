<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingTop="@dimen/widget_size_40">

    <ImageView
        android:id="@+id/iv_navigation_cancel"
        android:layout_width="@dimen/widget_size_36"
        android:layout_height="@dimen/widget_size_36"
        android:layout_margin="@dimen/widget_size_4"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/crop_image_menu_crop"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="@dimen/widget_size_120"
        android:layout_height="@dimen/widget_size_120"
        android:layout_margin="@dimen/widget_size_4"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        style="@style/line"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilepic" />
</androidx.constraintlayout.widget.ConstraintLayout>