<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconimage"
                android:layout_width="@dimen/widget_size_50"
                android:layout_height="@dimen/widget_size_50"
                android:layout_weight="1"
                android:paddingStart="@dimen/widget_size_10"
                android:paddingTop="@dimen/widget_size_10"
                android:paddingBottom="@dimen/widget_size_10"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:background="@drawable/ic_right" />

            <TextView
                android:id="@+id/submenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:padding="@dimen/widget_size_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_20"
                android:textStyle="normal"
                tools:text="sample"
                android:fontFamily="@font/google_sans"/>

            <ImageView
                android:id="@+id/ivGroupIndicator"
                android:layout_width="@dimen/widget_size_36"
                android:layout_height="@dimen/widget_size_36"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/widget_size_8"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:background="@drawable/group_indicator" />
        </LinearLayout>
        <View
            android:id="@+id/divider_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:layout_marginStart="@dimen/widget_size_2"
            android:layout_marginEnd="@dimen/widget_size_2"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>